/*
    参考文献 https://www.typescriptlang.org/ja/tsconfig
*/
{
    "compilerOptions": {
        "sourceMap": true,
        "target": "ES2019",
        "module": "CommonJS",
        "jsx": "react",
        "moduleResolution": "node",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist"
    }
}